{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "src/routes/**/*.ts",
    "src/plugins/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
